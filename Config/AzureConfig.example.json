{
  "regions": {
    "source": "eastasia",
    "target": "southeastasia"
  },
  "persistence": {
    "type": "sqlite",
    "databasePath": "state\\dr-drill.db"
  },
  "defaults": {
    "network": {
      "testVirtualNetworkName": "test-dr-vnet",
      "testSubnetName": "test-dr-subnet"
    },
    "subscription": {
      "defaultId": "",
      "defaultName": ""
    },
    "recoveryServices": {
      "defaultVaultName": "",
      "defaultResourceGroup": ""
    }
  },
  "discovery": {
    "subscriptions": {
      "mode": "all",
      "allowList": [],
      "denyList": []
    },
    "cache": {
      "enabled": true,
      "path": "state\\discovery-cache.json",
      "ttlMinutes": 1440
    }
  },
  "execution": {
    "timeoutMinutes": 30,
    "maxRetries": 3,
    "maxConcurrentVms": 3,
    "maxConcurrentJobs": 3,
    "batchSize": 3,
    "pollIntervalSeconds": 30
  },
  "progress": {
    "enablePerVmPhaseNotification": true,
    "includeOverallProgress": true,
    "overallSummaryIntervalSeconds": 300,
    "notificationThrottleSeconds": 10
  }
}
